@model ZayShop.Models.ProductModel

@{
    ViewData["Title"] = "Product Details";
}

<h2 class="mt-4 mb-3">Product Details</h2>

<div class="card mb-4 shadow">
    <div class="row g-0">
        @if (!string.IsNullOrEmpty(Model.ImageName))
        {
            <div class="col-md-4">
                <img src="~/assets/img/products/@Model.ImageName" alt="@Model.Name" class="img-fluid rounded-start" />
            </div>
        }
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                <p class="card-text"><strong>Review Count:</strong> @Model.ReviewCount</p>
                <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
            </div>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-outline-primary">⬅ Back to List</a>