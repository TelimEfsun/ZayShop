@model StudentModel

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-4">
    <div class="alert alert-warning shadow-sm">
        <strong>Diqqət!</strong> Bu əməliyyat tələbəni sistemdən siləcək. Silmək istədiyinizdən əminsinizmi?
    </div>
 <dl class="row">
     <dt class="col-sm-2">Adınız</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Soyadınız</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">Yaşınız</dt>
        <dd class="col-sm-10">@Model.Age</dd>
        <dt class="col-sm-2">Adınız</dt>
        <dd class="col-sm-10">@Model.Email</dd>
 </dl>
    <form asp-action="DeleteConfirmed" method="post" class="shadow-sm p-4 border rounded bg-light">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Tələbəni sil</button>
        <a asp-action="Index" class="btn btn-secondary">Ləğv et</a>        
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}