@model List<StudentModel>

@{
    ViewData["Title"] = "Student List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">📚 Tələbə list</h2>
        <a asp-controller="Student" asp-action="Create" class="btn btn-success">
            ➕ Yeni tələbə əlavə et
        </a>

    </div>



    @if (!Model.Any())
    {
        <div class="alert alert-info">Heç bir tələbə tapılmadı</div>
    }
    else
    {
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Email</th>
                    <th>Yaş</th>
                    <th style="width:160;">Hərəkətlər</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.Age</td>
                        <td><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Dəyişdir</a><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-1">Sil</a></td>
                    </tr>
                }

            </tbody>
        </table>
    }
</div>